<!--pages/homePage/homePage.wxml-->
<view class="bg_wrap">
  <view>
    <swiper class="card-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
      <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
        <view class="swiper-item">
          <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
          <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
        </view>
      </swiper-item>
    </swiper>

    <view class="padding flex flex-direction">
    <button class="cu-btn bg-blue lg" style="height:180rpx; width:650rpx;" bindtap="CSSA">CSSA</button>
    <button class="cu-btn bg-pink margin-tb-sm lg" style="height:180rpx; width:650rpx;" bindtap="freshman_manual">新生手册</button>
    </view>

    <view style="background: rgb(41, 40, 53); height: 600rpx; width:750rpx; margin-top:-140rpx;">
    <view class="cu-list grid col-2 no-border" style="background:rgb(41,40,53); padding-top: 120rpx; width:650rpx; padding-left: 100rpx;">
     <view class="cu-item" wx:for="{{iconList}}" wx:if="{{index < gridCol*2}}">
        <view class="cuIcon-{{item.icon}} text-{{item.color}}" bindtap="{{item.bindtap}}" style="font-size: 70rpx;">
        </view>
        <text>{{item.name}}</text>
        <view style="background: rgb(41,40,53); width: 750rpx; height: 40rpx;"></view>
      </view>
    </view>
    </view>

    
  </view>


  <view>
  <text class="title" style="margin-top: 50rpx;">往期活动</text>
  <view class="cu-card case {{isCard?'no-card':''}}">
  <view class="cu-item shadow" wx:for="{{activitylist}}">
    <view class="image">
      <image src="{{item.url}}" mode="widthFix"></image>
      <view class="cu-bar bg-shadeBottom">
        <text class="text-cut">{{item.description}}</text>
      </view>
    </view>
  </view>
  </view>
  </view>
</view>
